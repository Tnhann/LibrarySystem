@model Loan

<div class="card shadow">
    <div class="card-header bg-success text-white">
        <h2 class="h4 mb-0">Kitap İade</h2>
    </div>
    <div class="card-body">
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i>
            Aşağıdaki kitabı iade almak istediğinizden emin misiniz?
        </div>

        <dl class="row">
            <dt class="col-sm-3">Kitap</dt>
            <dd class="col-sm-9">@Model.Book?.Title</dd>

            <dt class="col-sm-3">Üye</dt>
            <dd class="col-sm-9">@Model.Member?.FullName</dd>

            <dt class="col-sm-3">Ödünç Alma Tarihi</dt>
            <dd class="col-sm-9">@Model.LoanDate.ToString("dd.MM.yyyy")</dd>

            <dt class="col-sm-3">Teslim Tarihi</dt>
            <dd class="col-sm-9">
                @Model.DueDate.ToString("dd.MM.yyyy")
                @if (Model.IsOverdue)
                {
                    <span class="badge bg-danger ms-2">Gecikmiş</span>
                }
            </dd>
        </dl>

        <form asp-action="ReturnConfirmed" class="mt-3">
            <input type="hidden" asp-for="LoanID" />
            <button type="submit" class="btn btn-success">
                <i class="fas fa-check"></i> İade Al
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Listeye Dön
            </a>
        </form>
    </div>
</div> 